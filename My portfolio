    <script>
        const programs = [
            { id: 1, title: "Facing Operation", code: "O0001 (FACING)\nG21 G17 G90 G40 G80\nT1 M06\nG54 S1200 M03\nG00 X-10 Y-10 Z50\nG01 Z-0.5 F100\nG01 X110 F400\nM30", anim: "line" },
            { id: 2, title: "Square Pocket", code: "O0002 (SQ POCKET)\nT2 M06\nG54 S1800 M03\nG00 X20 Y20 Z50\nG01 Z-5 F150\nG01 X80\nG01 Y80\nM30", anim: "box" },
            { id: 3, title: "Drilling with Dwell", code: "O0003 (DRILLING)\nT3 M06\nG54 S1500 M03\nG00 X40 Y40 Z50\nG81 Z-15 R2 F200 P500\nG80 M30", anim: "point" },
            { id: 4, title: "Bolt Hole Circle", code: "O0004 (BOLT HOLE)\nG81 Z-10 R2 F200\nX70 Y50\nX50 Y70\nX30 Y50\nG80 M30", anim: "point" },
            { id: 5, title: "Slot Milling", code: "O0005 (SLOT MILLING)\nT4 M06\nG54 S2000 M03\nG01 X80 F300\nG00 Z50 M30", anim: "line" },
            { id: 6, title: "Circular Pocket", code: "O0006 (CIRCULAR)\nT4 M06\nG54 S2200 M03\nG03 I-10 J0 F250\nM30", anim: "point" },
            { id: 7, title: "Chamfering", code: "O0007 (CHAMFER)\nT5 M06\nG54 S2500 M03\nG01 X100 Y100\nG01 X0 Y100 M30", anim: "box" },
            { id: 8, title: "Tapping Cycle", code: "O0008 (TAPPING)\nT6 M06\nG84 Z-12 R2 F500\nG80 M30", anim: "point" },
            { id: 9, title: "Tool Height Check", code: "O0009 (TOOL CHECK)\nT1 M06\nG01 Z10 F50\nG00 Z100 M30", anim: "point" },
            { id: 10, title: "Machine Parking", code: "O0010 (PARKING)\nG00 X0 Y0\nG00 Z200\nM05 M09 M30", anim: "home" }
        ];

        const projects = [
            "Gearbox Housing Drafting (AutoCAD)", "Engine Block Parametric Model (SolidWorks)", "VMC Cycle Optimization (Mastercam)", 
            "Hydraulic Press FEA Analysis", "Conveyor Belt Layout Design", "Piston Thermal Simulation", 
            "Aero-Component CAM Toolpath", "Chassis Welding Jig Design", "TQM Quality Documentation", "Local AI Manufacturing Model"
        ];

        function init() {
            const cncGrid = document.getElementById('cnc-container');
            programs.forEach(p => {
                cncGrid.innerHTML += `
                    <div class="bg-slate-900 p-5 rounded-2xl border border-slate-800">
                        <h3 class="font-bold text-sm mb-3 uppercase text-blue-400">${p.id}. ${p.title}</h3>
                        <div class="sim-bed mb-4"><div class="tool" id="tool-${p.id}"></div></div>
                        <button onclick="runAnim(${p.id}, '${p.anim}')" class="w-full bg-blue-600/20 text-blue-400 py-2 rounded font-bold text-xs border border-blue-500/40 mb-3 hover:bg-blue-600 hover:text-white transition">ANIMATE TOOLPATH</button>
                        <div class="code-box">${p.code}</div>
                    </div>`;
            });

            const projGrid = document.getElementById('projects-container');
            projects.forEach((name, i) => {
                projGrid.innerHTML += `<div class="bg-slate-900 p-6 rounded-xl border border-slate-800"><span class="text-blue-500 font-bold text-xs uppercase italic">Project ${i+1}</span><h4 class="font-bold text-white mt-1 uppercase text-sm underline decoration-slate-700">${name}</h4></div>`;
            });
        }

        function runAnim(id, type) {
            const t = document.getElementById(`tool-${id}`);
            if(type === 'line') { t.style.left = '80%'; setTimeout(() => t.style.left = '10px', 1000); }
            else if(type === 'box') { t.style.left = '80%'; setTimeout(() => t.style.top = '80%', 500); setTimeout(() => t.style.left = '10px', 1000); setTimeout(() => t.style.top = '10px', 1500); }
            else { t.style.left = '50%'; t.style.top = '50%'; setTimeout(() => { t.style.left = '10px'; t.style.top = '10px'; }, 1000); }
        }

        function openTab(id) {
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            document.getElementById(id).classList.add('active');
        }

        window.onload = init;
    </script>
